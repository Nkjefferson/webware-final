extends layout

block content
  .row
    .col-md-4.col-md-offset-4
      h1.center Log In
      hr
      form(action='/login' method='post')
        .form-group
          label(for='name_input') WPI Username
          input(type='text' class='form-control' id='name_input' name='name')

        fieldset.form-group
          .form-check
            label.form-check-label
              input(type='radio' class='form-check-input' name='role' id='professor' value='professor' checked)
              span &nbsp Professor

          .form-check
            label.form-check-label
              input(type='radio' class='form-check-input' name='role' id='student' value='student')
              span &nbsp Student

        button(type='submit' class='btn btn-primary btn-block') Log In
